<Window x:Class="CardMasterManager.Forms.GridConfigurator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardMasterManager.Forms"
        mc:Ignorable="d"
        Title="Configure View" Height="800" Width="300">
    <Grid>
     
            <StackPanel Margin="15">
            <Border CornerRadius="0" BorderBrush="LightGray" BorderThickness="1" DockPanel.Dock="Top">
                <DockPanel Name ="headerStack" HorizontalAlignment="Left" Height="20"  VerticalAlignment="Top" Width="248">
                    <TextBox Name="headerField" Text="Column name" HorizontalAlignment="Left" BorderBrush="Transparent"/>
                    <TextBox Name="visibilityField" Text="Visible" HorizontalAlignment="Right" BorderBrush="Transparent"/>
                </DockPanel>
            </Border>
           
                <StackPanel Name ="mainStack" HorizontalAlignment="Left" Height="570" VerticalAlignment="Top" Width="252"/>
           
        </StackPanel>
       
        <DockPanel Name ="buttonStack" HorizontalAlignment="Left" Height="28" Margin="38,721,0,0" VerticalAlignment="Top" Width="214"/>

    </Grid>
</Window>
