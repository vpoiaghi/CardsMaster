<UserControl x:Class="CardMasterCommon.CustomTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Label Content="Label" Height="30" Name="BaseLabel" MinWidth="30"></Label>
        <TextBox x:Name="BaseTextBox" Height="18" MinWidth="50" Margin="0,-5,0,0" LostFocus="BaseTextBox_LostFocus" GotFocus="BaseTextBox_GotFocus"/>
    </StackPanel>
</UserControl>